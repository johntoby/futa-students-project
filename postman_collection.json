{
  "info": {
    "name": "FUTA Students API",
    "description": "API collection for Federal University of Technology Akure Computer Science Students Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthcheck",
          "host": ["{{baseUrl}}"],
          "path": ["healthcheck"]
        }
      }
    },
    {
      "name": "Create Student",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"matric_number\": \"CSC/2020/001\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"email\": \"john.doe@student.futa.edu.ng\",\n  \"phone\": \"08012345678\",\n  \"level\": 300\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/students",
          "host": ["{{baseUrl}}"],
          "path": ["students"]
        }
      }
    },
    {
      "name": "Get All Students",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/students",
          "host": ["{{baseUrl}}"],
          "path": ["students"]
        }
      }
    },
    {
      "name": "Get Student by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/students/1",
          "host": ["{{baseUrl}}"],
          "path": ["students", "1"]
        }
      }
    },
    {
      "name": "Update Student",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"matric_number\": \"CSC/2020/001\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Smith\",\n  \"email\": \"john.smith@student.futa.edu.ng\",\n  \"phone\": \"08012345678\",\n  \"level\": 400\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/students/1",
          "host": ["{{baseUrl}}"],
          "path": ["students", "1"]
        }
      }
    },
    {
      "name": "Delete Student",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/students/1",
          "host": ["{{baseUrl}}"],
          "path": ["students", "1"]
        }
      }
    }
  ]
}